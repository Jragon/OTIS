<header> 
  <%= link_to 'Home', root_path %>
</header>


<h2>World Vision Report</h2>

<h3>World Vision Changes</h3>
<%= render 'changes' %>

<h3>Group Changes</h3>
<table id="report">
  <thead>
    <th></th>
    <th colspan="3" class="collheader">Change #1</th>
    <th colspan="3" class="collheader">Change #2</th>
    <th colspan="3" class="collheader">Change #3</th>
  </thead>
  <tbody>
    <tr id="header">
      <th></th>
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>    
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>    
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>      
    </tr>
    <tr id="resource">
      <td>World Vision</td>
      <% @top_changes.each do |change| %>
        <td class="name"><%= change.name %></td>
        <td class="score"><%= change.score %></td>
        <td class="ten_seed"><%= change.average_ten_seed %></td>
      <% end %>
    </tr>
    <% @groups.each do |group| %>
      <tr class="group">
        <td><%= group.name %></td>
        <% group.changes_with_score.limit(3).each do |change| %>
          <td class="name"><%= change.name %></td>
          <td class="score"><%= change.score %></td>
          <td class="ten_seed"><%= change.average_ten_seed %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>