<table id="report">
  <thead>
    <th></th>
    <th colspan="3">Change #1</th>
    <th colspan="3">Change #2</th>
    <th colspan="3">Change #3</th>
  </thead>
  <tbody>
    <tr id="header">
      <th></th>
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>    
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>    
      <th>Name</th>      
      <th>Score</th>      
      <th>Ten Seed</th>      
    </tr>
    <tr id="resource">
      <td><%= @resource.name %></td>
      <% @resource.changes_with_score.limit(3).each do |change| %>
        <td><%= change.name %></td>
        <td><%= change.score %></td>
        <td><%= change.average_ten_seed %></td>
      <% end %>
    </tr>
    <% @resource.groups.each do |group| %>
      <tr class="group">
        <td><%= group.name %></td>
        <% group.changes_with_score(@resource.id).limit(3).each do |change| %>
          <td><%= change.name %></td>
          <td><%= change.score %></td>
          <td><%= change.average_ten_seed %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>