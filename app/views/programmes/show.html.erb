<h2><%= @programme.name %></h2>

<h5>Villages under <%= @programme.name %></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No. Discussions</th>
      <th>Top Change</th>
    </tr>
  </thead>

  <tbody>
    <% @programme.villages.each do |village| %>
      <tr>
        <td><%= link_to village.name, village %></td>
        <td><%#= village.discusions.count %>N/A</td>
        <td>N/A</td>
      </tr>
    <% end %>
  </tbody>
</table>